<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc 
    http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="br.com.infomore" />
	<mvc:annotation-driven />

	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>


	
	<mvc:interceptors>
		<bean class="br.com.infomore.web.interceptor.AutorizadorInterceptor" />
	</mvc:interceptors>
	
	<mvc:resources mapping="resources/**" location="resources/"
	cache-period="31556926"/>
	
	<!-- Command com a injeção da fachada -->
	<bean id="infomoreCommand" class="br.com.infomore.controle.web.command.impl.InfomoreCommand">
		<property name="fachada" ref="fachada" />
	</bean>
	
</beans>